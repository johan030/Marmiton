{% extends 'base.html.twig' %}

{% block title %}Hello SearchController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Recherche avancée</h1>


</div>
<div class="example-wrapper">
    

  
 {# {% if app.request.method == 'POST' and recette | length == 0 %} #}
   
    {# {% else %} #}

   <h2>Résultat de la recherche</h2>
    <table>
 {% for recette in recettes %}
            <tr>
                <td>{{ recette.id }}</td>
                <td>{{ recette.title }}</td>
                <td>{{ recette.createdAt ? recette.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ recette.content }}</td>
                <td>{{ recette.userId }}</td>
                <td>{{ recette.categorieId }}</td>
                <td>
                    <a href="{{ path('app_recette_show', {'id': recette.id}) }}">show</a>
                    <a href="{{ path('app_recette_edit', {'id': recette.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
         <h2>Aucun résultat à recherche</h2>
    {% endfor %}
    </table
</div>
{% endblock %}
